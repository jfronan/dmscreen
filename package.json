{
  "name": "dmscreen",
  "version": "0.9.0",
  "description": "App para DMs",
  "private": true,
  "main": "src/electron-starter.js",
  "dependencies": {
    "electron-compile": "^6.3.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-dropzone": "^10.1.4",
    "react-redux": "^6.0.1",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "electron-forge start",
    "electron": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "fastMake": "electron-forge make --skip-package"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "wix"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "icon": "src/favicon.ico"
      },
      "electronWixMSIConfig": {
        "appDirectory": "out/dmscreen-win32-x64",
        "outputDirectory": "out/make",
        "exe": "DM-Screen Installer",
        "description": "Simulador virtual de pantalla para DMs",
        "name": "DM Screen",
        "shortcutName": "DM Screen",
        "manufacturer": "Juan Francisco Ronanduano",
        "programFilesFolderName": "DMscreen",
        "ui": {
          "enabled": true,
          "chooseDirectory": true
        }
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "DM Screen",
        "name": "dmscreen"
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^4.1.3",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "3.0.13",
    "electron-wix-msi": "^2.1.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.12.4"
  },
  "author": "Juan Francisco Ronanduano",
  "license": "MIT"
}
